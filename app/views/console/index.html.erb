<div class="container">
  <div class="row console-row">
    <div class="col-md-4 console-panel profile-panel">
      <h3 class="panel-title tracker-title"><%= @user.username.titleize %></h3>
      <%= image_tag(@user.avatar_url) %>
      <span>Welcome <%= @user.first_name %> <%= @user.last_name %></span>
      <span><%= link_to "#{@user.email}", console_path %></span>
    </div>
    <div class="col-md-4 console-panel number-panel">
      <div class="col-md-6" >
        <h3 class="panel-title tracker-title">Stories:</h3>
        <p><i class="fa fa-book"></i> 0</p>
      </div>
      <div class="col-md-6">
        <h3 class="panel-title github-title split">Repositories:</h3>
        <div class="repo-count-loading">
          <%= image_tag('ajax-loader.gif') %>
        </div>
        <p class="repo-count">
          <%= render 'console/repo_count' %>
        </p>
      </div> 
    </div>
    <div class="col-md-4 console-panel">
      <h3 class="panel-title github-title">Current Status</h3>
      <div class="list-group">
        <% if current_user.repositories.blank? == false %>
          <li class="list-group-item"><h4><%= @repository.repo_name %></h4></li>
          <li class="list-group-item">ID: <%= @repository.repo_github_ident %></li>
          <li class="list-group-item">Number of forks: <%= @repository.number_of_forks %></li>
          <li class="list-group-item">Forked: <%= @repository.forked %></li>
        <% else %>
          <li class="list-group-item"><h4><%= "No Repository Selected" %></h4></li>
          <li class="list-group-item">ID: <%= "No Repository Selected" %></li>
          <li class="list-group-item">Number of forks: <%= "No Repository Selected" %></li>
          <li class="list-group-item">Forked: <%= "No Repository Selected" %></li>
        <% end %>
      </div>
  </div>

  <!-- Second Row of console panels -->
