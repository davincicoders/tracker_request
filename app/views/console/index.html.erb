  <div class="row console-row">
    <div class="col-md-4 console-panel profile-panel">
      <h3 class="panel-title tracker-title"><%= @user.username.titleize %></h3>
      <%= image_tag(@user.avatar_url) %>
      <span>Welcome <%= @user.first_name %> <%= @user.last_name %></span>
      <span><%= link_to "#{@user.email}", console_path %></span>
    </div>
